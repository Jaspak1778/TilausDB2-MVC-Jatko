@model IEnumerable<TilausDB2.Models.Tilausrivit>

@{
    ViewBag.Title = "Tilausrivit";
}

<h2>Tilausrivit</h2>

<p>
    @Html.ActionLink("Create New", "Luo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Maara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ahinta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tilaukset.Toimitusosoite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tuotteet.Nimi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Maara)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ahinta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tilaukset.Toimitusosoite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tuotteet.Nimi)
        </td>

        <td>

            <a class="btn btn-warning" data-toggle="tooltip" data-placement="bottom" title="Editoi" href="/Tilausrivit/Edit?id=@item.TilausriviID"><img src="~/Icons/pen.svg" width="12" height="12" /></a>

            <a class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Lisätiedot" href="/Tilausrivit/Details?id=@item.TilausriviID"><img src="~/Icons/three-dots.svg" width="12" height="12" /></a>

            <a class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Poista" href="/Tilausrivit/Delete?id=@item.TilausriviID"><img src="~/Icons/x-circle.svg" width="12" height="12" /></a>
        </td>
    </tr>
}

</table>
